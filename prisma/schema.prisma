generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String               @id @default(cuid())
  email               String               @unique
  name                String?
  image               String?
  phone               String?
  passwordHash        String?
  emailVerified       DateTime?
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  stripeCustomerId    String?              @unique
  accounts            Account[]
  addresses           Address[]
  aiConversations     AiConversation[]
  orders              Order[]
  passwordResetTokens PasswordResetToken[]
  reviews             Review[]
  sessions            Session[]
  graphics            UserGraphic[]
}

model UserGraphic {
  id           String   @id @default(cuid())
  userId       String
  originalName String
  storagePath  String   @unique
  size         Int
  mimeType     String
  createdAt    DateTime @default(now())
  publicId     String   @unique
  orderId      String?
  orderItemId  String?
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Address {
  id         String   @id @default(cuid())
  userId     String?
  label      String?
  nume       String?
  telefon    String?
  judet      String
  localitate String
  strada_nr  String
  postCode   String?
  bloc       String?
  scara      String?
  etaj       String?
  ap         String?
  interfon   String?
  isDefault  Boolean  @default(false)
  type       String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User?    @relation(fields: [userId], references: [id])
}

model Subscriber {
  id          String    @id @default(cuid())
  email       String    @unique
  token       String    @unique
  confirmedAt DateTime?
  source      String?
  createdAt   DateTime  @default(now())
}

model Order {
  id               String      @id @default(cuid())
  orderNo          Int         @unique
  userId           String?
  paymentType      String
  address          Json
  billing          Json
  shippingFee      Decimal     @default(0)
  total            Decimal     @default(0)
  invoiceLink      String?
  awbNumber        String?
  awbCarrier       String?
  status           String      @default("active")
  canceledAt       DateTime?
  marketing        Json?
  createdAt        DateTime    @default(now())
  awbLabelBase64   String?
  awbLabelFileName String?
  user             User?       @relation(fields: [userId], references: [id])
  items            OrderItem[]
}

model OrderItem {
  id         String  @id @default(cuid())
  orderId    String
  name       String
  qty        Int
  unit       Decimal @default(0)
  total      Decimal @default(0)
  artworkUrl String?
  metadata   Json?
  order      Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Review {
  id          String   @id @default(cuid())
  rating      Int
  title       String?
  content     String
  createdAt   DateTime @default(now())
  userId      String
  productSlug String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([productSlug])
}

model AiConversation {
  id            String      @id @default(cuid())
  source        String
  identifier    String
  userId        String?
  hasError      Boolean     @default(false)
  isRead        Boolean     @default(false)
  lastMessageAt DateTime    @default(now())
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  aiPaused      Boolean     @default(false)
  customTag     String?
  status        String      @default("active")
  user          User?       @relation(fields: [userId], references: [id])
  messages      AiMessage[]
}

model AiMessage {
  id             String         @id @default(cuid())
  conversationId String
  role           String
  content        String
  createdAt      DateTime       @default(now())
  conversation   AiConversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
}
